<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Toolkit.TestApp.Themes">
    <DataTemplate x:Key="HockeyPlayerDataTemplate">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding Number}" />
            <TextBlock Text="{Binding FirstName}" />
            <TextBlock Text="{Binding LastName}" />
            <TextBlock Text="{Binding Goals}" />
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="GoaltenderDataTemplate">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding Number}" />
            <TextBlock Text="{Binding FirstName}" />
            <TextBlock Text="{Binding LastName}" />
            <TextBlock Text="{Binding Wins}" />
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="DriverDataTemplate">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding Nationality}" />
            <TextBlock Text="{Binding FirstName}" />
            <TextBlock Text="{Binding LastName}" />
            <TextBlock Text="{Binding Wins}" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>
